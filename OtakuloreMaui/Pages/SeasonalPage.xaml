<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Otakulore.Models"
             x:Class="Otakulore.Pages.SeasonalPage">
    <ContentPage.BindingContext>
        <models:SeasonalViewModel/>
    </ContentPage.BindingContext>
    <Grid Grid.Row="1" Margin="10">
        <CollectionView ItemsSource="{Binding Items}" ItemTemplate="{StaticResource MediaItemTemplate}" RemainingItemsThreshold="0" RemainingItemsThresholdReachedCommand="{Binding LoadMoreItemsCommand}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="5"/>
            </CollectionView.ItemsLayout>
        </CollectionView>
        <ActivityIndicator IsRunning="{Binding IsLoading}"/>
    </Grid>
</ContentPage>