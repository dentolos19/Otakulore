<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Otakulore.Models"
             x:Class="Otakulore.Pages.SearchPage">
    <ContentPage.BindingContext>
        <models:SearchViewModel/>
    </ContentPage.BindingContext>
    <Grid RowDefinitions="Auto,*" RowSpacing="10" Margin="10">
        <SearchBar Grid.Row="0" Placeholder="Search" Text="{Binding Query, Mode=TwoWay}" SearchCommand="{Binding SearchCommand}"/>
        <Grid Grid.Row="1">
            <CollectionView ItemsSource="{Binding Items}" ItemTemplate="{StaticResource MediaItemTemplate}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="5"/>
                </CollectionView.ItemsLayout>
            </CollectionView>
            <ActivityIndicator IsRunning="{Binding IsLoading}"/>
        </Grid>
    </Grid>
</ContentPage>