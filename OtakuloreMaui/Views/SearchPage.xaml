<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Otakulore.Models"
             x:Class="Otakulore.Views.SearchPage">
    <ContentPage.BindingContext>
        <models:SearchViewModel/>
    </ContentPage.BindingContext>
    <Grid RowDefinitions="Auto,*" RowSpacing="10" Margin="10">
        <Entry Grid.Row="0" Placeholder="Search" Text="{Binding Query, Mode=TwoWay}" ReturnCommand="{Binding SearchCommand}"/>
        <Grid Grid.Row="1">
            <ListView ItemsSource="{Binding Items}" HasUnevenRows="True" ItemTapped="OnItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:SearchItemModel">
                        <ViewCell>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10" Padding="10">
                                <Image Grid.Column="0" Source="{Binding ImageUrl}" WidthRequest="100"/>
                                <Label Grid.Column="1" Text="{Binding Title}" FontSize="Title" VerticalOptions="Center"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ActivityIndicator IsRunning="{Binding IsLoading}"/>
        </Grid>
    </Grid>
</ContentPage>