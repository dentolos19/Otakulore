<?xml version="1.0" encoding="utf-8"?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:controls="clr-namespace:Otakulore.Controls"
       xmlns:views="clr-namespace:Otakulore.Views"
       x:Class="Otakulore.AppShell">
    <FlyoutItem Title="Home">
        <ShellContent Route="home" ContentTemplate="{DataTemplate views:HomePage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Search">
        <ShellContent Route="search" ContentTemplate="{DataTemplate views:SearchPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Library">
        <ShellContent Route="library" ContentTemplate="{DataTemplate views:LibraryPage}"/>
    </FlyoutItem>
</Shell>