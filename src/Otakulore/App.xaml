<Application x:Class="Otakulore.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:media="using:CommunityToolkit.WinUI.UI.Media"
             xmlns:resources="using:Otakulore.Resources">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>
                <ResourceDictionary Source="Resources/Images.xaml"/>
                <resources:Templates/>
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <media:AcrylicBrush x:Key="AcrylicBackgroundThemeBrush" TintColor="White" TintOpacity="0.4" BlurAmount="8"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <media:AcrylicBrush x:Key="AcrylicBackgroundThemeBrush" TintColor="Black" TintOpacity="0.4" BlurAmount="8"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <media:AcrylicBrush x:Key="AcrylicBaseBrush" TintColor="{ThemeResource SystemBaseLowColor}" TintOpacity="0.2" BlurAmount="4"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>