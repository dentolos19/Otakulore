<Page x:Class="Otakulore.Views.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      NavigationCacheMode="Required">
    <Grid>
        <NavigationView x:Name="PanelNavigation" PaneDisplayMode="Top" IsBackButtonVisible="Collapsed" SelectionChanged="OnNavigatePanel">
            <Frame x:Name="PanelFrame"/>
        </NavigationView>
        <controls:Loading x:Name="LoadingIndicator" IsLoading="True" Background="{ThemeResource AcrylicBackgroundThemeBrush}">
            <ProgressRing/>
        </controls:Loading>
    </Grid>
</Page>