<Page x:Class="Otakulore.Views.Panels.ProfileSettingsPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel Margin="10" Spacing="10">
        <ComboBox Header="Title Language" SelectedIndex="2">
            <ComboBoxItem Content="English"/>
            <ComboBoxItem Content="Native"/>
            <ComboBoxItem Content="Romaji"/>
        </ComboBox>
        <ComboBox Header="Score Format" SelectedIndex="3">
            <ComboBoxItem Content="100 Point System (55/100)"/>
            <ComboBoxItem Content="10 Point Decimal System (5.5/10)"/>
            <ComboBoxItem Content="10 Point System (5/10)"/>
            <ComboBoxItem Content="5 Star System (3/5)"/>
        </ComboBox>
        <CheckBox Content="Display Adult Content" IsChecked="True"/>
        <TextBox Header="About Yourself" Text="This page does not have any functions! Only displays the placeholder controls for future development."/>
        <StackPanel Orientation="Horizontal" Spacing="5">
            <Button Content="Save" Click="OnRequestSave"/>
            <Button Content="Logout" Click="OnRequestLogout"/>
        </StackPanel>
    </StackPanel>
</Page>