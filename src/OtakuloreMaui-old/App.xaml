<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:Otakulore.Components"
             xmlns:models="clr-namespace:Otakulore.Models"
             x:Class="Otakulore.App">

    <Application.Resources>

        <ResourceDictionary Source="Resources/Styles.xaml"/>
        <ResourceDictionary Source="Resources/OwnStyles.xaml"/>

        <components:ViewMediaCommand x:Key="ViewMediaCommand"/>

        <DataTemplate x:Key="MediaItemTemplate" x:DataType="models:MediaItemModel">
            <Grid RowDefinitions="*,Auto" RowSpacing="5" Padding="5" WidthRequest="150" HeightRequest="250">
                <Frame Grid.Row="0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{StaticResource ViewMediaCommand}" CommandParameter="{Binding .}"/>
                    </Frame.GestureRecognizers>
                    <Image Source="{Binding ImageUrl}"/>
                </Frame>
                <Label Grid.Row="1" Text="{Binding Title}" LineBreakMode="TailTruncation" HorizontalOptions="Center"/>
            </Grid>
        </DataTemplate>

    </Application.Resources>

</Application>