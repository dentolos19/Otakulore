<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Otakulore.Models"
             x:Class="Otakulore.Pages.HomePage"
             Title="Home">
    <ContentPage.Resources>
        <DataTemplate x:Key="MediaItemTemplate" x:DataType="models:MediaItemModel">
            <Grid RowDefinitions="*,Auto" RowSpacing="5" Padding="5" WidthRequest="150" HeightRequest="250">
                <Frame Grid.Row="0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{StaticResource ViewMediaCommand}" CommandParameter="{Binding Data}"/>
                    </Frame.GestureRecognizers>
                    <Image Source="{Binding ImageUrl}"/>
                </Frame>
                <Label Grid.Row="1" Text="{Binding Title}" LineBreakMode="TailTruncation" HorizontalOptions="Center"/>
            </Grid>
        </DataTemplate>
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <models:HomeViewModel/>
    </ContentPage.BindingContext>
    <Grid RowDefinitions="Auto,*" RowSpacing="10" Padding="10">
        <SearchBar Grid.Row="0" Placeholder="Search" SearchCommand="{Binding SearchCommand}" SearchCommandParameter="{Binding Text, Source={RelativeSource Self}}"/>
        <ScrollView Grid.Row="1">
            <StackLayout Spacing="20">
                <StackLayout Spacing="10">
                    <Label Text="ðŸŽ‡ Trending Now" FontSize="Medium"/>
                    <CollectionView ItemTemplate="{StaticResource MediaItemTemplate}" ItemsSource="{Binding TrendingItems}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.EmptyView>
                            <ActivityIndicator IsRunning="True"/>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </StackLayout>
                <StackLayout Spacing="10">
                    <Label Text="â¤ï¸ Highly Beloved" FontSize="Medium"/>
                    <CollectionView ItemTemplate="{StaticResource MediaItemTemplate}" ItemsSource="{Binding FavoriteItems}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.EmptyView>
                            <ActivityIndicator IsRunning="True"/>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </StackLayout>
                <StackLayout Spacing="10">
                    <Label Text="ðŸŒŸ Most Popular" FontSize="Medium"/>
                    <CollectionView ItemTemplate="{StaticResource MediaItemTemplate}" ItemsSource="{Binding PopularItems}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.EmptyView>
                            <ActivityIndicator IsRunning="True"/>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>