<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Otakulore.Models"
             x:Class="Otakulore.Pages.ContentViewerPage"
             Title="{Binding Title}"
             Shell.NavBarIsVisible="False">
    <ContentPage.BindingContext>
        <models:ContentViewerViewModel/>
    </ContentPage.BindingContext>
    <Grid RowDefinitions="20,Auto,*" ColumnDefinitions="20,Auto,*">
        <WebView Grid.RowSpan="3" Grid.ColumnSpan="3" Source="{Binding CurrentAddress}"/>
        <ActivityIndicator Grid.RowSpan="3" Grid.ColumnSpan="3" IsRunning="{Binding IsLoading}"/>
        <ImageButton Grid.Row="1" Grid.Column="1" Command="{Binding BackCommand}">
            <ImageButton.Source>
                <FontImageSource Glyph="&#xE72B;" FontFamily="SegoeAssets"/>
            </ImageButton.Source>
        </ImageButton>
    </Grid>
</ContentPage>