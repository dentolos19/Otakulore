<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="ContentItemTemplate">
        <Grid Width="200" Padding="5,5,5,5" ToolTipService.ToolTip="{Binding Path=Title}">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0">
                <Image.Source>
                    <BitmapImage UriSource="{Binding Path=ImageUrl}"/>
                </Image.Source>
            </Image>
            <TextBlock Grid.Row="1" Text="{Binding Path=Title}" TextAlignment="Center" FontWeight="Bold"/>
            <TextBlock Grid.Row="2" Text="{Binding Path=Subtitle}" TextAlignment="Center"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>