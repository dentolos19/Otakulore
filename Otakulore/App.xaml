<Application x:Class="Otakulore.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:olt="using:Otakulore.Converters"
             xmlns:olr="using:Otakulore.Resources">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>
                <ResourceDictionary Source="Resources/Assets.xaml"/>
                <olr:Templates/>
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default" Source="Resources/Styles.xaml"/>
            </ResourceDictionary.ThemeDictionaries>
            <olt:EnumDescriptionConverter x:Key="EnumDescriptionConverter"/>
            <olt:EnumIntegerConverter x:Key="EnumIntegerConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>