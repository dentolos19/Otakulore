<Page x:Class="Otakulore.Views.FavoritesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid RowSpacing="10" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Favorites" FontWeight="Bold" FontSize="24"/>
        <GridView x:Name="FavoriteList" Grid.Row="1"
                  ItemTemplate="{StaticResource MediaItemTemplate}"
                  IsItemClickEnabled="True"
                  ItemClick="OnItemClicked"/>
    </Grid>
</Page>