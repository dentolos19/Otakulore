<Page x:Class="Otakulore.Views.FavoritesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Loaded="OnLoaded">
    <ListBox x:Name="FavoriteList" ItemTemplate="{StaticResource MediaItemTemplate}" MouseDoubleClick="OnOpenMedia">
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid Columns="8" Width="{Binding ActualWidth, ElementName=FavoriteList}"/>
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
    </ListBox>
</Page>