<ui:Page x:Class="Otakulore.Views.DetailsPage"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:ui="http://schemas.modernwpf.com/2019"
         xmlns:vm="clr-namespace:Otakulore.ViewModels">
    <ui:Page.DataContext>
        <vm:DetailsViewModel/>
    </ui:Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="{Binding Path=ImageUrl}"/>
            <TextBlock Grid.Column="2" Text="{Binding Path=Title}" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        </Grid>
        <TabControl Grid.Row="2">
            <TabItem Header="Overview">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,-5">
                        <StackPanel Margin="0,5">
                            <TextBlock Margin="0,0,0,2" FontWeight="Bold">Format</TextBlock>
                            <TextBlock Text="{Binding Path=Format}"/>
                        </StackPanel>
                        <StackPanel Margin="0,5">
                            <TextBlock Margin="0,0,0,2" FontWeight="Bold">Status</TextBlock>
                            <TextBlock Text="{Binding Path=Status}"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="0,-5">
                        <StackPanel Margin="0,5">
                            <TextBlock Margin="0,0,0,2" FontWeight="Bold">Synopsis</TextBlock>
                            <TextBlock Text="{Binding Path=Synopsis}" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Margin="0,5">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=Background}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Margin="0,0,0,2" FontWeight="Bold">Background</TextBlock>
                            <TextBlock Text="{Binding Path=Background}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Watch">
                <TextBlock Text="Coming Soon!" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </TabItem>
        </TabControl>
    </Grid>
</ui:Page>