<Page x:Class="Otakulore.Views.SettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:cr="clr-namespace:Otakulore.Core;assembly=Otakulore.Core">
    <Page.DataContext>
        <cr:UserData/>
    </Page.DataContext>
    <StackPanel>
        <GroupBox Header="General Preferences">
            <StackPanel>
                <CheckBox Content="Enable Dark Mode (Requires Restart)" IsChecked="{Binding Path=EnableDarkMode}"/>
                <CheckBox Content="Enable Discord Rich Presence (Requires Restart)" IsChecked="{Binding Path=EnableDiscordRichPresence}"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Page>