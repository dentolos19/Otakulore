<Page x:Class="Otakulore.Views.SettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:cr="clr-namespace:Otakulore.Core;assembly=Otakulore.Core">
    <Page.DataContext>
        <cr:UserData/>
    </Page.DataContext>
    <StackPanel>
        <GroupBox Header="General Preferences">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <CheckBox Content="Enable Discord Rich Presence (Requires Restart)" IsChecked="{Binding Path=EnableDiscordRpc}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </StackPanel>
</Page>