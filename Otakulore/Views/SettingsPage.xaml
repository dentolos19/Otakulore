<ui:Page x:Class="Otakulore.Views.SettingsPage"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:ui="http://schemas.modernwpf.com/2019"
         xmlns:m="clr-namespace:Otakulore.Models"
         xmlns:vm="clr-namespace:Otakulore.ViewModels">
    <Page.DataContext>
        <vm:SettingsViewModel/>
    </Page.DataContext>
    <TabControl>
        <TabItem Header="General">
            <TextBlock Text="Coming Soon!" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </TabItem>
        <TabItem Header="Services">
            <ListBox x:Name="ProviderList" Margin="10" MouseDoubleClick="OnOpenProvider">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="m:ProviderItemModel">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="{Binding Provider.Name}" FontWeight="Bold"/>
                            <TextBlock Grid.Row="1" Text="{Binding Provider.Author}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </TabItem>
    </TabControl>
</ui:Page>