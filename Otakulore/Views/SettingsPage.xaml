<ui:Page x:Class="Otakulore.Views.SettingsPage"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:ui="http://schemas.modernwpf.com/2019"
         xmlns:m="clr-namespace:Otakulore.Models"
         xmlns:vm="clr-namespace:Otakulore.ViewModels">
    <Page.DataContext>
        <vm:SettingsViewModel/>
    </Page.DataContext>
    <TabControl>
        <TabItem Header="General">
            <TextBlock Text="Coming Soon!" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </TabItem>
        <TabItem Header="Services">
            <StackPanel Margin="10,5">
                <StackPanel.Resources>
                    <DataTemplate x:Key="ProviderItemTemplate" DataType="m:ProviderItemModel">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="{Binding Path=Name}" FontWeight="Bold"/>
                            <TextBlock Grid.Row="1" Text="{Binding Path=Author}"/>
                        </Grid>
                    </DataTemplate>
                </StackPanel.Resources>
                <GroupBox Header="Anime Providers" Margin="0,5">
                    <ListBox ItemsSource="{Binding Path=AnimeProviders}" ItemTemplate="{StaticResource ResourceKey=ProviderItemTemplate}"/>
                </GroupBox>
                <GroupBox Header="Manga Provider" Margin="0,5">
                    <ListBox ItemsSource="{Binding Path=MangaProviders}" ItemTemplate="{StaticResource ResourceKey=ProviderItemTemplate}"/>
                </GroupBox>
            </StackPanel>
        </TabItem>
    </TabControl>
</ui:Page>