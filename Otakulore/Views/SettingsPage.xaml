<Page x:Class="Otakulore.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel Margin="10" Spacing="10">
        <Expander Header="Content Providers" IsExpanded="True" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch">
            <GridView x:Name="ProviderList" ItemTemplate="{StaticResource ProviderItemTemplate}" IsItemClickEnabled="True" ItemClick="OnProviderClicked"/>
        </Expander>
        <StackPanel Orientation="Horizontal" Spacing="5">
            <Button Content="Reset All Settings" Click="OnResetAllSettings"/>
            <Button Content="Open Local Folder" Click="OnOpenLocalFolder"/>
            <Button Content="Perform Test Operations" Click="OnPerformTestOperations"/>
        </StackPanel>
    </StackPanel>
</Page>