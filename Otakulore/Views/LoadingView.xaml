<Page x:Class="Otakulore.Views.LoadingView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel Spacing="20" VerticalAlignment="Center">
        <Image Source="{StaticResource IconImage}" Width="120"/>
        <TextBlock Text="Welcome!" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center"/>
        <StackPanel Spacing="10">
            <TextBlock x:Name="ProgressStatus" Text="Loading" Style="{ThemeResource BodyTextBlockStyle}" HorizontalAlignment="Center"/>
            <ProgressBar x:Name="ProgressIndicator" IsIndeterminate="True" Width="150"/>
        </StackPanel>
    </StackPanel>
</Page>