<Page x:Class="Otakulore.Views.DetailsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="PosterImage" Grid.Column="0"/>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="FavoriteButton" Grid.Column="1" Content="&#xE006;" ToolTip="Favorite" FontFamily="Segoe MDL2 Assets" Click="ToggleFavorite"/>
                </Grid>
                <Border Grid.Row="1">
                    <TextBlock x:Name="TitleText" VerticalAlignment="Bottom" FontSize="24"/>
                </Border>
                <Border Grid.Row="2">
                    <TextBlock x:Name="YearText" VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Grid>
        <TabControl Grid.Row="2">
            <TabItem Header="Overview">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <GroupBox Header="Format" Margin="0,0,0,10">
                                <TextBlock x:Name="FormatText"/>
                            </GroupBox>
                            <GroupBox Header="Status" Margin="0,0,0,10">
                                <TextBlock x:Name="StatusText"/>
                            </GroupBox>
                            <GroupBox Header="Episodes" Margin="0,0,0,10">
                                <TextBlock x:Name="EpisodesText"/>
                            </GroupBox>
                            <GroupBox Header="Starting Date" Margin="0,0,0,10">
                                <TextBlock x:Name="StartingDateText"/>
                            </GroupBox>
                            <GroupBox Header="Ending Date">
                                <TextBlock x:Name="EndingDateText"/>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                    <GroupBox Grid.Column="2" Header="Synopsis" Padding="10">
                        <TextBlock x:Name="SynopsisText" TextWrapping="Wrap"/>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Stream">
                <ScrollViewer>
                    <StackPanel>
                        <Expander Header="4Anime" Margin="0,0,0,10" Expanded="FourAnimeSectionExpanded">
                            <Grid>
                                <Grid>
                                    <ListBox x:Name="FourAnimeList" ItemTemplate="{StaticResource ResourceKey=StreamItemTemplate}" MouseDoubleClick="StreamFourAnime"/>
                                </Grid>
                                <Grid x:Name="FourAnimeLoadingPanel">
                                    <TextBlock x:Name="FourAnimeLoadingIndicator" Text="Loading" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </Expander>
                        <Expander Header="Gogoanime" Expanded="GogoanimeSectionExpanded">
                            <Grid>
                                <Grid>
                                    <ListBox x:Name="GogoanimeList" ItemTemplate="{StaticResource ResourceKey=StreamItemTemplate}" MouseDoubleClick="StreamGogoanime"/>
                                </Grid>
                                <Grid x:Name="GogoanimeLoadingPanel">
                                    <TextBlock x:Name="GogoanimeLoadingIndicator" Text="Loading" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page>