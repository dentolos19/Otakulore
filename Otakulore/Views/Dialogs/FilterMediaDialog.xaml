<ContentDialog x:Class="Otakulore.Views.Dialogs.FilterMediaDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer>
        <StackPanel Spacing="10">
            <ComboBox Header="Type" HorizontalAlignment="Stretch"/>
            <ComboBox Header="Format" HorizontalAlignment="Stretch"/>
            <ListView Header="Genres">
                <CheckBox Content="Placeholder"/>
                <CheckBox Content="Placeholder"/>
                <CheckBox Content="Placeholder"/>
            </ListView>
            <ListView Header="Tags">
                <CheckBox Content="Placeholder"/>
                <CheckBox Content="Placeholder"/>
                <CheckBox Content="Placeholder"/>
            </ListView>
            <Grid ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Filter" HorizontalAlignment="Stretch" Click="OnFilter"/>
                <Button Grid.Column="1" Content="Cancel" HorizontalAlignment="Stretch" Click="OnCancel"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>