<ContentDialog x:Class="Otakulore.Views.Dialogs.SelectProviderDialog"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:models="using:Otakulore.Models"
                   Opened="OnDialogOpened">
    <ListView x:Name="ProviderList" IsItemClickEnabled="True" ItemClick="OnProviderClicked">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="models:ProviderItemModel">
                <Grid Padding="5" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="{Binding Provider.Image}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Provider.Name}" FontSize="16" VerticalAlignment="Center"/>
                </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentDialog>