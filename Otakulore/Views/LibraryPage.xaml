<Page x:Class="Otakulore.Views.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:models="using:Otakulore.Models"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <models:LibraryViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <PersonPicture Grid.Column="0" ProfilePicture="{Binding ImageUrl}" Margin="20"/>
            <TextBlock Grid.Column="1" Text="{Binding Name}" Style="{ThemeResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
        </Grid>
        <NavigationView Grid.Row="1" PaneDisplayMode="Top" IsBackButtonVisible="Collapsed" IsSettingsVisible="False">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Overview"/>
                <NavigationViewItem Content="Anime List"/>
                <NavigationViewItem Content="Manga List"/>
            </NavigationView.MenuItems>
        </NavigationView>
    </Grid>
</Page>