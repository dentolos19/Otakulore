<ui:Page x:Class="Otakulore.Views.HomePage"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:ui="http://schemas.modernwpf.com/2019"
         xmlns:m="clr-namespace:Otakulore.Models"
         xmlns:vm="clr-namespace:Otakulore.ViewModels">
    <Page.DataContext>
        <vm:HomeViewModel/>
    </Page.DataContext>
    <Page.Resources>
        <DataTemplate x:Key="MediaGridItemTemplate" DataType="m:MediaItemModel">
            <Grid Width="120">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="{Binding ImageUrl}"/>
                <TextBlock Grid.Row="2" Text="{Binding Title}" TextAlignment="Center" TextTrimming="CharacterEllipsis"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <ScrollViewer>
        <Grid>
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontSize="20">Welcome!</TextBlock>
                <GroupBox Grid.Row="2" Header="Top Anime">
                    <ListBox x:Name="TopAnimeList" ItemsSource="{Binding TopAnimes}" ItemTemplate="{StaticResource MediaGridItemTemplate}" MouseDoubleClick="OnOpenAnime">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </GroupBox>
                <GroupBox Grid.Row="4" Header="Top Manga">
                    <ListBox x:Name="TopMangaList" ItemsSource="{Binding TopMangas}" ItemTemplate="{StaticResource MediaGridItemTemplate}" MouseDoubleClick="OnOpenManga">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </GroupBox>
            </Grid>
            <ui:ProgressRing>
                <ui:ProgressRing.Style>
                    <Style TargetType="ui:ProgressRing">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasLoaded}" Value="False">
                                <Setter Property="IsActive" Value="True"/>
                            </DataTrigger>
                        </Style.Triggers>
                        <Setter Property="IsActive" Value="False"/>
                    </Style>
                </ui:ProgressRing.Style>
            </ui:ProgressRing>
        </Grid>
    </ScrollViewer>
</ui:Page>