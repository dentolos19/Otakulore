<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Frame">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="{DynamicResource Theme2}"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource FontColor}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}"/>
    </Style>

    <Style TargetType="SearchBar">
        <Setter Property="TextColor" Value="{DynamicResource FontColor}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}"/>
    </Style>

    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Background" Value="{DynamicResource Theme1}"/>
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarTextColor" Value="{DynamicResource FontColor}"/>
        <Setter Property="BarBackgroundColor" Value="{DynamicResource Theme2}"/>
    </Style>

    <Style TargetType="TabbedPage">
        <Setter Property="BarTextColor" Value="{DynamicResource FontColor}"/>
        <Setter Property="BarBackgroundColor" Value="{DynamicResource Theme2}"/>
    </Style>

</ResourceDictionary>