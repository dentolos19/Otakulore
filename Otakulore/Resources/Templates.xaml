<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:models="clr-namespace:Otakulore.Models">
    <DataTemplate x:Key="MediaItemTemplate" DataType="models:MediaItemModel">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="200"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="{Binding ImageUrl}" Stretch="UniformToFill"/>
            <TextBlock Grid.Row="2" Text="{Binding Title}" TextAlignment="Center" TextTrimming="CharacterEllipsis"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>