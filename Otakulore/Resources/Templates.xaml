<ResourceDictionary x:Class="Otakulore.Resources.Templates"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xi="using:Microsoft.Xaml.Interactivity"
                    xmlns:xic="using:Microsoft.Xaml.Interactions.Core"
                    xmlns:uic="using:CommunityToolkit.WinUI.UI.Controls"
                    xmlns:olm="using:Otakulore.Models">
    <DataTemplate x:Key="NotificationContentTemplate" x:DataType="olm:NotificationDataModel">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{Binding Message}" TextWrapping="Wrap" VerticalAlignment="Center"/>
            <Button x:Name="ContinueButton" Grid.Column="1" Content="{Binding ContinueText}">
                <xi:Interaction.Behaviors>
                    <xic:DataTriggerBehavior Binding="{Binding ContinueText}" ComparisonCondition="Equal" Value="{x:Null}">
                        <xic:ChangePropertyAction TargetObject="{Binding ElementName=ContinueButton}" PropertyName="Visibility" Value="Collapsed"/>
                    </xic:DataTriggerBehavior>
                    <xic:EventTriggerBehavior EventName="Click">
                        <xic:CallMethodAction TargetObject="{Binding}" MethodName="InvokeContinueClicked"/>
                    </xic:EventTriggerBehavior>
                </xi:Interaction.Behaviors>
            </Button>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="MediaItemTemplate" x:DataType="olm:MediaItemModel">
        <Grid RowSpacing="2" Width="150" Height="250">
            <ToolTipService.ToolTip>
                <StackPanel>
                    <TextBlock Text="{Binding Title}" FontWeight="Bold" TextWrapping="Wrap"/>
                    <uic:MetadataControl Items="{Binding Meta}" Separator=" • "/>
                    <RatingControl Value="{Binding Score}" Caption="{Binding ScoreCaption}" IsReadOnly="True" HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding Description}" TextTrimming="WordEllipsis" TextWrapping="Wrap" MaxLines="5"/>
                </StackPanel>
            </ToolTipService.ToolTip>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <uic:ImageEx Grid.Row="0" Source="{Binding ImageUrl}" Stretch="UniformToFill" EnableLazyLoading="True" CornerRadius="10"/>
            <TextBlock Grid.Row="1" Text="{Binding Title}" TextAlignment="Center" TextTrimming="CharacterEllipsis"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="ProviderItemTemplate" x:DataType="olm:ProviderItemModel">
        <Image Source="{Binding Provider.ImageUrl}" ToolTipService.ToolTip="{Binding Provider.Name}" Margin="5" MaxWidth="100" MaxHeight="100"/>
    </DataTemplate>
</ResourceDictionary>