<ResourceDictionary x:Class="Otakulore.Resources.Templates"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:interactions="using:Microsoft.Xaml.Interactions.Core"
                    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
                    xmlns:models="using:Otakulore.Models">
    <DataTemplate x:Key="MediaItemTemplate" x:DataType="models:MediaItemModel">
        <Grid Padding="5" Width="180">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ToolTipService.ToolTip>
                <StackPanel>
                    <TextBlock Text="{Binding Title}" FontWeight="Bold" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding Format}"/>
                    <RatingControl Value="{Binding Score}" Caption="{Binding ScoreCaption}" IsReadOnly="True" HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" TextTrimming="WordEllipsis" MaxLines="5"/>
                </StackPanel>
            </ToolTipService.ToolTip>
            <Grid Grid.Row="0" Height="250">
                <Image x:Name="CoverImage" Source="{Binding ImageUrl}" Stretch="UniformToFill"/>
                <ProgressRing x:Name="ProgressIndicator" IsActive="True">
                    <interactivity:Interaction.Behaviors>
                        <interactions:EventTriggerBehavior SourceObject="{Binding ElementName=CoverImage}" EventName="ImageOpened">
                            <interactions:ChangePropertyAction TargetObject="{Binding ElementName=ProgressIndicator}" PropertyName="IsActive" Value="False"/>
                        </interactions:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                </ProgressRing>
            </Grid>
            <TextBlock Grid.Row="1" Text="{Binding Title}" TextAlignment="Center" TextTrimming="CharacterEllipsis"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="ProviderItemTemplate" x:DataType="models:ProviderItemModel">
        <Image Source="{Binding Provider.ImageUrl}" ToolTipService.ToolTip="{Binding Provider.Name}" Margin="5" MaxWidth="100" MaxHeight="100"/>
    </DataTemplate>
</ResourceDictionary>