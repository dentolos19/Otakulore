<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Scheduler;assembly=Syncfusion.Maui.Scheduler"
             xmlns:models="clr-namespace:Otakulore.Models"
             x:Class="Otakulore.Pages.SchedulePage"
             x:DataType="models:ScheduleViewModel"
             Title="Schedule">
    <syncfusion:SfScheduler View="Day" AppointmentsSource="{Binding Items}" Tapped="OnTapped">
        <syncfusion:SfScheduler.DaysView>
            <syncfusion:SchedulerDaysView TimeIntervalHeight="100"/>
        </syncfusion:SfScheduler.DaysView>
        <syncfusion:SfScheduler.AppointmentMapping>
            <syncfusion:SchedulerAppointmentMapping
                Subject="Title"
                StartTime="Time"
                EndTime="EndTime"/>
        </syncfusion:SfScheduler.AppointmentMapping>
    </syncfusion:SfScheduler>
</ContentPage>